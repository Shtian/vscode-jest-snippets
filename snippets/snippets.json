{
    "afterEach": {
        "prefix": "ae",
        "body": "\nafterEach(() => {\n\t$1\n});\n",
        "description": "afterEach function is called once after each spec",
        "scope": "source.js"
    },
    "beforeEach": {
        "prefix": "be",
        "body": "\nbeforeEach(() => {\n\t$1\n});\n",
        "description": "beforeEach function is called once before each spec",
        "scope": "source.js"
    },
    "describe": {
        "prefix": "desc",
        "body": "\ndescribe('${1:Name of the group}', () => {\n\t$2\n});\n",
        "description": "creates a suite of tests",
        "scope": "source.js"
    },
    "test": {
        "prefix": "test",
        "body": "\ntest('should ${1:behave...}', () => {\n\t$2\n});\n",
        "description": "creates a test method",
        "scope": "source.js"
    },
    "testAsyncAwait": {
		"prefix": "taa",
		"body": [
			"test('$1', async () => {", 
			"\tawait expect($2($3)).toBe($4);",
			"});"
		],
		"description": "Generates jest test using async/await."
	},
	"testCallbackDone": {
		"prefix": "tcd",
		"body": [
			"test('$1', done => {", 
			"\tfunction callback(data) {",
			"\t\texpect(data).toBe($3);",
    		"\t\tdone();",
  			"\t}",
			"\t$2(callback);",
			"});"
		],
		"description": "Generates jest callback test using done."
	},
	"testPromise": {
		"prefix": "tp",
		"body": [
			"test('$1', () => {", 
			"\treturn $2($3).then($4 => {",
			"\t\texpect($4).toBe($5);",
			"\t});",
			"});"
		],
		"description": "Generates jest test for promise."
	},
	"testPromiseResolves": {
		"prefix": "tpr",
		"body": [
			"test('$1', () => {", 
			"\treturn expect($2($3)).resolves.toBe($4);",
			"});"
		],
		"description": "Generates jest test for promise using resolves."
	}
}